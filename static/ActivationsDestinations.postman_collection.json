	"item": [
		{
			"name": "Activation Queries",
			"item": [
				{
					"name": "1. Create Activation Query",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.collectionVariables.set(\"activation_id\", pm.response.json().activation.summary.activation_id);"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "{{v2_api_key}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"query\": {{query}},\n    \"campaign_name\": {{campaign_name}}\n}"
						},
						"url": {
							"raw": "https://{{infosum_api}}/api/v1/queries",
							"protocol": "https",
							"host": [
								"{{infosum_api}}"
							],
							"path": [
								"api",
								"v1",
								"queries"
							]
						}
					},
					"response": []
				},
				{
					"name": "1b. Check Activation Query Status",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									""
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "{{v2_api_key}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "https://{{infosum_api}}/api/v1/queries/{{activation_id}}/result",
							"protocol": "https",
							"host": [
								"{{infosum_api}}"
							],
							"path": [
								"api",
								"v1",
								"queries",
								"{{activation_id}}",
								"result"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Destination Management",
			"item": [
				{
					"name": "2a. Get Destination Details",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "{{v2_api_key}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "https://{{infosum_api}}/api/v2/destinations/instances/{{destination_id}}",
							"protocol": "https",
							"host": [
								"{{infosum_api}}"
							],
							"path": [
								"api",
								"v2",
								"destinations",
								"instances",
								"{{destination_id}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "2. Push Activation Results to Destination",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "{{v2_api_key}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"push_config\": {\n        \"filename\": \"{{filename}}\"\n    }\n}"
						},
						"url": {
							"raw": "https://{{infosum_api}}/api/v2/activations/queries/{{activation_id}}/destinations/{{destination_id}}/push",
							"protocol": "https",
							"host": [
								"{{infosum_api}}"
							],
							"path": [
								"api",
								"v2",
								"activations",
								"queries",
								"{{activation_id}}",
								"destinations",
								"{{destination_id}}",
								"push"
							]
						}
					},
					"response": []
				}
			]
		}
	],
